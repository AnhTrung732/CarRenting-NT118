<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentPages.Customer.UserInfor.MyProfileFragment">

    <ScrollView
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:columnCount="2"
        android:rowCount="15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_avatar"
        tools:ignore="MissingConstraints">


        <EditText
            android:id="@+id/data_name"
            android:layout_width="260dp"
            android:layout_row="0"
            android:layout_column="1"
            android:hint="Họ và tên"
            android:padding="15dp"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/data_phone"
            android:layout_width="260dp"
            android:layout_row="1"
            android:layout_column="1"
            android:hint="Số điện thoại"
            android:padding="15dp"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/data_email"
            android:layout_width="260dp"
            android:layout_row="2"
            android:layout_column="1"
            android:hint="Email"
            android:padding="15dp"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/data_address"
            android:layout_width="260dp"
            android:layout_row="3"
            android:layout_column="1"
            android:hint="Địa chỉ"
            android:padding="15dp"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText" />



        <EditText
            android:id="@+id/data_bank_number"
            android:layout_width="260dp"
            android:layout_row="4"
            android:layout_column="1"
            android:hint="Số tài khoản ngân hàng"
            android:padding="15dp"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="150dp"
            android:layout_row="0"
            android:layout_column="0"
            android:padding="15dp"
            android:text="Họ và tên:"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="150dp"
            android:layout_row="1"
            android:layout_column="0"
            android:padding="15dp"
            android:text="SĐT:"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />



        <TextView
            android:id="@+id/tv_email"
            android:layout_width="150dp"
            android:layout_row="2"
            android:layout_column="0"
            android:padding="15dp"
            android:text="Email:"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />


        <TextView
            android:id="@+id/tv_address"
            android:layout_width="150dp"
            android:layout_row="3"
            android:layout_column="0"
            android:padding="15dp"
            android:text="Địa chỉ:"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_bank_number"
            android:layout_width="150dp"
            android:layout_row="4"
            android:layout_column="0"
            android:padding="15dp"
            android:text="TK Ngân hàng:"
            android:textColor="@color/sky"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />



    </GridLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_avatar_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_update_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/sky"
                android:text="Cập nhật tài khoản"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>