<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentPages.Customer.CustomerMessageFragment">

    <TextView
        android:id="@+id/tv_title"
        android:text="TIN NHẮN"
        android:textStyle="bold"
        android:textSize="@dimen/_30ssp"
        android:textColor="@color/sunset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        tools:ignore="HardcodedText,MissingConstraints" />

    <ImageView
        android:id="@+id/ic_delete"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/ic_delete"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_35sdp"
        tools:ignore="InefficientWeight,MissingConstraints" />

    <Button
        android:id="@+id/btn_message"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:text="Trò chuyện"
        android:textSize="@dimen/_16ssp"
        android:background="@drawable/blue_round_border"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        tools:ignore="HardcodedText,MissingConstraints" />
    <Button
        android:id="@+id/btn_noti"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:text="Thông báo"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/blue_round_border"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        tools:ignore="HardcodedText,MissingConstraints" />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_message"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>