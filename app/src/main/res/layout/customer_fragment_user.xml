<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentPages.Customer.Customer_HomeFragment">

    <LinearLayout
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        tools:ignore="MissingConstraints"
        android:background="@color/sky"
        android:orientation="vertical">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="25dp"
            android:background="@drawable/white_round_border">
        </ImageView>

    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="15"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tv_banking_account"
            android:layout_width="150dp"
            android:layout_row="0"
            android:layout_column="0"
            android:padding="15dp"
            android:text="Tài khoản:"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/data_banking_account"
            android:layout_width="260dp"
            android:layout_row="0"
            android:layout_column="1"
            android:padding="15dp"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="150dp"
            android:layout_row="1"
            android:layout_column="0"
            android:padding="15dp"
            android:text="Giới tính:"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/data_gender"
            android:layout_width="260dp"
            android:layout_row="1"
            android:layout_column="1"
            android:padding="15dp"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="150dp"
            android:layout_row="2"
            android:layout_column="0"
            android:padding="15dp"
            android:text="Ngày sinh:"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/data_birthday"
            android:layout_width="260dp"
            android:layout_row="2"
            android:layout_column="1"
            android:padding="15dp"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_cccd"
            android:layout_width="150dp"
            android:layout_row="3"
            android:layout_column="0"
            android:padding="15dp"
            android:text="CCCD:"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/data_cccd"
            android:layout_width="260dp"
            android:layout_row="3"
            android:layout_column="1"
            android:padding="15dp"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_lisense"
            android:layout_width="150dp"
            android:layout_row="4"
            android:layout_column="0"
            android:padding="15dp"
            android:text="Bằng lái:"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/data_lisense"
            android:layout_width="260dp"
            android:layout_row="4"
            android:layout_column="1"
            android:padding="15dp"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="150dp"
            android:layout_row="5"
            android:layout_column="0"
            android:padding="15dp"
            android:text="SĐT:"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/data_phone"
            android:layout_width="260dp"
            android:layout_row="5"
            android:layout_column="1"
            android:padding="15dp"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="150dp"
            android:layout_row="6"
            android:layout_column="0"
            android:padding="15dp"
            android:text="Email:"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/data_email"
            android:layout_width="260dp"
            android:layout_row="6"
            android:layout_column="1"
            android:padding="15dp"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="150dp"
            android:layout_row="7"
            android:layout_column="0"
            android:padding="15dp"
            android:text="Địa chỉ:"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/data_address"
            android:layout_width="260dp"
            android:layout_row="7"
            android:layout_column="1"
            android:padding="15dp"
            android:textColor="@color/sky"
            android:textSize="24sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>